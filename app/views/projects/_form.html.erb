<%= form_for @project do |f| %>
<div class="container">
	
		<div class="form-group">
			<label for="field_1">Project Title</label>
			<div class="textfield" style="width:50%">
				<%= f.text_field :title, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label for="field_1">Project Subtitle</label>
			<div class="textfield" style="width:50%">
				<%= f.text_field :subtitle, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<label for="field_2">Pledge a Goal</label>
			<div class="textfield" style="width:50%">
				<%= f.text_field :goal, class: "form-control", placeholder: "Amount of fundings required in RM" %>
			</div>
		</div>

		<div class="form-group">
			<label for="field_1">Length of Campaign</label>
			<div class="textfield" style="width:50%">
				<%= f.text_field :time, class: "form-control", placeholder: "Number of Days" %>
			</div>
		</div>

		<div class="form-group">
			<label for="field_1">Project Description</label>
			<div class="textfield" style="width:50%">
				<%= f.text_area :description, class: "form-control", placeholder: "Describe your project" %>
			</div>
		</div>

		<div class="form-group">
			<label for="field_1">Video Link</label>
			<div class="textfield" style="width:50%">
				<!-- <input type="text" name="dummy" class= "form-control" placeholder="Put your link here" /> -->
				<%= f.text_field :youtubelink, class: "form-control", placeholder: "Put your link here" %>
			</div>
		</div>

		<div class="form-group">
			<label for="field_1">Talents Required</label>
			<div class="textfield" style="width:50%">
				<input type="text" name="dummy" class= "form-control" placeholder="List down the talents required eg. Ruby Developer" />
				<%#= f.text_field :description, class: "form-control", placeholder: "Talents" %>
			</div>
		</div>

		<div class="form-group">
			<label for="field_1">Project Images</label>
			<div>
				<%= f.file_field :images, multiple: true %>
			</div>
		</div>
		
		<%= f.hidden_field :user_id, value:"#{session[:user_id]}" %>
	  
		<div class="form-group">
			<div>
				<%= f.submit 'Create Project!', class: 'btn btn-primary btn-lg' %>
			</div>
		</div>
<% end %>
</div>

