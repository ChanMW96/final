<div class='row'>
	<div class='col-ex-12'>
		<%= form_for @project do |f| %>
		<div class="container">
			<div class="well well-lg">
				<div class="col-sm-6">
					<div class="form-group">
						<label for="field_1">Project Title</label>
						<div class="textfield" style="width:85%">
							<%= f.text_field :title, class: "form-control" %>
						</div>
					</div>
					<div class="form-group">
						<label for="field_1">Project Subtitle</label>
						<div class="textfield" style="width:85%">
							<%= f.text_field :subtitle, class: "form-control" %>
						</div>
					</div>
					<div class="form-group">
						<label for="field_2">Pledge Goal</label>
						<div class="textfield" style="width:85%">
							<%= f.text_field :goal, class: "form-control", placeholder: "Amount of fundings required RM" %>
						</div>
					</div>
					<div class="form-group">
							<label for="field_1">Length of Campaign</label>
							<div class="textfield" style="width:85%">
								<%= f.text_field :time, class: "form-control", placeholder: "Number of Days" %>
							</div>
						</div>
					</div>
					<div class="col-sm-6">
						<div class="form-group">
							<label for="field_1">Project Description</label>
							<div class="textfield">
								<%= f.text_area :description, class: "form-control", placeholder: "Describe your project" %>
							</div>
						</div>
						<div class="form-group">
							<label for="field_1">Project Images</label>
							<div>
								<%= f.file_field :images %>
							</div>
						</div>
					</div>
				  
					<div class="form-group">
						<div class="col-sm-offset-5 col-sm-10">
							<%= f.submit 'Submit', class: 'btn btn-primary btn-lg' %>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>